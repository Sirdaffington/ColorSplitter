<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="csp.App"
             RequestedThemeVariant="Default">

    <Application.Styles>
        <FluentTheme />
        <StyleInclude Source="avares://Color-Splitter/Styles/universal.axaml" />
        <StyleInclude Source="avares://Color-Splitter/Styles/dark.axaml" />
    </Application.Styles>

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceInclude Source="avares://Color-Splitter/Styles/Overrides/CheckBox.axaml" />
                <ResourceInclude Source="avares://Color-Splitter/Styles/Overrides/ComboBox.axaml" />
                <ResourceInclude Source="avares://Color-Splitter/Styles/Overrides/Button.axaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>